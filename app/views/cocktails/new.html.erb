<h1>Create a Cocktail</h1>
<p>Please enter the name of your cocktail</p>
<%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :description, placeholder: "Smooth and spicy cocktail, so yummy...." %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>

