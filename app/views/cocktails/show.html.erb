<h1><%= @cocktail.name %> </h1>
<p><%= @cocktail.description %></p>
<% if @cocktail.photo.attached? %>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<p><%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-secondary' %></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> - <%= dose.description %>
  <button id="<%=dose.id%>" class="btn btn-sm inline delete-dose" data-name="<%= dose.ingredient.name %>">(Delete)</button>
  <%= link_to "", dose_path(dose), method: :delete, id: "delete-link-#{dose.id}", class: "hidden" %>
  </li>
  <% end %>
</ul>
